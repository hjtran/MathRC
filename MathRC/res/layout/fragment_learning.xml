<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mathrc.LearningActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:text="Which lesson would you like to take?" />

    <Button
        android:id="@+id/programmingLessonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignRight="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="96dp"
        android:text="Programming"
        android:onClick="programmingLesson" />

    <Button
        android:id="@+id/physicsLessonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/programmingLessonButton"
        android:layout_alignRight="@+id/programmingLessonButton"
        android:layout_below="@+id/programmingLessonButton"
        android:layout_marginTop="25dp"
        android:onClick="physicsLesson"
        android:text="Physics" />

</RelativeLayout>
